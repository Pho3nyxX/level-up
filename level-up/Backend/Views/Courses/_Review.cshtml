@model Backend.Models.Review

<h1 class="blue text-center mb-0 mt-2">Leave a review</h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col">
            <form asp-action="Review" asp-route-id=@ViewData["courseId"] class="row g-3 needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <label asp-for="Stars" class="form-label mt-2 mb-0">Choose review</label>
                <div class="d-flex justify-content-center mt-0 mb-3">
                    <select asp-for="Stars" class="form-select option-container bgc-orange-10" aria-label="Default select example">
                        <option selected>Select</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>

                <label asp-for="Comment" class="form-label mt-0 mb-0">Description</label>
                <div class="mt-0">
                    <textarea asp-for="Comment" class="form-control bgc-orange-10" rows="5"></textarea>
                </div>  
                
                <div class="btns mt-4 mb-3">
                    <button type="submit" class="btn link">Save</button>
                    <button type="submit" class="btn">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

